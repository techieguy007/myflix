{
  "name": "myflix",
  "version": "1.0.0",
  "description": "A Netflix clone for home network streaming",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "dev:server": "nodemon server.js",
    "dev:client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "install-client": "cd client && npm install",
    "install-all": "npm install && npm run install-client",
    "setup": "node install.js",
    "reset-db": "node reset-db.js",
    "seed-demo": "node seed-demo-data.js",
    "test-auth": "node test-auth.js"
  },
  "keywords": [
    "netflix",
    "streaming",
    "movies",
    "home-server"
  ],
  "author": "MyFlix Developer",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
